- doc_label ||= 'default'
- if current_user.is_admin? || current_user.is_employee? || Fluxx.config("documents_allowed_#{doc_label}_#{current_user && current_user.user_profile && current_user.user_profile.name}")
  - required_doc_ids ||= []
  - force_show ||= false
  - if force_show || (model.respond_to?(:model_documents) && model.id)
    - partial_data_src_url = url_for(model_documents_path({:documentable_id => model.id, :documentable_type => model.class.name, :required_doc_ids => required_doc_ids, :skip_wrapper => true, :doc_label => doc_label}))
    .partial{'data-src' => partial_data_src_url, 'class' => 'partial'}
      = render :partial => "model_documents/model_document_list", :locals => { :models => (model == nil ? [] : model.model_documents.where(:doc_label => doc_label)), :documentable => model, :required_doc_ids => required_doc_ids, :doc_label => doc_label }