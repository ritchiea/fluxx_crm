%div.fluxx-card-show-wide-list.fluxx-card-show-model-documents
  %ol.fluxx-card-show-wide-list-elements
    %li.fluxx-card-show-wide-list-title
      -if can_current_user_edit_create_users?
        %div.fluxx-card-show-wide-list-add= link_to image_tag('/images/icons/add.png', :class=> 'add-button'), new_model_document_path(:model_document => {:documentable_id => model.id, :documentable_type => model.class.name}), :class => 'fluxx-card-link-to-modal fluxx-card-link-modal-action-onclose-reload-self fluxx-card-modal-close-on-success[.fluxx-card-show]', :title => "Add Document"
      Documents
      - if (model.respond_to?(:model_documents) ? model.model_documents.empty? : true)
        %li= "No Documents"
      - else
        - model.model_documents.sort_by{|doc| (-1 * doc.created_at.to_i) if doc.created_at}.each do |doc|
          %li.fluxx-card-show-documents-item
            = link_to(truncate(doc.document_file_name, :length => 25), doc.document.url, :target => '_blank', :class => 'air-download')
            %span
              - if doc.created_by
                By
                = doc.created_by.full_name 
              - if doc.created_at
                Added at
                = doc.created_at.ampm_time
                on
                = doc.created_at.full
              - else
                no timestamp
          - if can_current_user_edit_create_users?
            %span.delete-button= link_to_delete image_tag("/images/icons/delete.png"), doc, @controller, {:class => 'fluxx-card-form-on-complete-refresh', :style => 'display: none'}
    %li.footer