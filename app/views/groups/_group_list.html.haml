- models = Group.load_all
%h3 
  Groups
  %span.actions= link_to image_tag('/images/fluxx_engine/theme/default/icons/add.png', :class=> 'add-button'), new_group_path, :class => 'to-modal', 'data-on-success' => 'refreshNamed,close', 'target' => '.group-partial-span', :title => "Add Group"
- if !models || models.empty?
  %p.caption= "There are no groups."
- else
  - models.each do |model|
    %ul.list
      %li
        %div.action-item
          %strong= link_to model.name, edit_group_path(model), :class => 'to-modal', :title => 'Update Funding Source', 'data-on-success' => 'refreshCaller,close'
          - if current_user.has_delete_for_model? model
            %span.actions= link_to image_tag("/images/fluxx_engine/theme/default/icons/delete.png"), group_path(model), {:class => 'as-delete', 'data-on-success' => 'refreshCaller'}