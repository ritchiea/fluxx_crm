%div.partial
  %h3
    = "Relationships"
    %span.actions
      - if can_current_user_edit_create_users? 
        = link_to 'add a relationship', new_user_organization_path(:user_organization => {:user_id => model.id}), :class => 'to-modal', 'data-on-success' => 'refreshCaller,close'
  - if(model.user_organizations.size > 0)
    - model.user_organizations.each do |user_org|
      %div.org_row
        %div.edit_row_links
          - if can_current_user_edit_create_organizations?
            %span.actions
              = link_to "edit", edit_user_organization_path(user_org), :class => 'to-modal', 'data-on-success' => 'refreshCaller,close'
              = link_to "delete", user_organization_path(user_org), {:class => 'as-delete', 'data-on-success' => 'refreshCaller'}
          <br/>
          - if model.primary_user_organization == user_org
            %span.caption.primary= "Primary Org"
          - else
            - if can_current_user_edit_create_organizations?
              %span.caption.primary= link_to 'make primary', self.send("#{@model_name}_path", {:user => {:primary_user_organization_id => user_org.id}}), :class => 'as-put'
        - unless user_org.department.blank?
          = user_org.title
          ,
        - unless user_org.department.blank?
          = user_org.department
          ,
        = user_org.organization.name
  - else
    %p= "No links to organizations"
