.address
  - if location.street_address
    %span.address1= location.street_address
  - if location.street_address2 
    %span.address2= location.street_address2 
  - if location.city
    %span.city>= location.city
  - if location.city && location.geo_state && location.geo_state.name
    ,
  - if location.geo_state && location.geo_state.name
    %abbr{:title => location.geo_state.name}= location.geo_state.abbreviation
  - if location.postal_code
    %span.zipcode= location.postal_code
  - if location.geo_country
    %span.country= location.geo_country.name

- if detailed
  - work_contact_details = [ |
      ['Direct Phone:', location.phone], |
      ['Fax:',  location.fax], |
      ['Email:', email_link(location.email) ], |
      ['Other Contact:', location.other_contact ], |
      ['Website:', external_link(location.url) ], |
      ['Personal Blog:', external_link(location.blog_url) ], |
      ['Personal Twitter:', external_link(location.twitter_url) ], |
      ['Acronym:', location.acronym ], |
    ].each do |contact_detail| |
    - label, value = contact_detail
    - unless value.blank?
      .pairs
        .key= label
        .value= value
